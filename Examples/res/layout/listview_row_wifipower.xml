<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wifipower_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/wifipower_ssid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wifipower_ssid"
        android:textAppearance="@style/blueLarge" />

    <ProgressBar
        android:id="@+id/network_url_downloadprogress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="100dp"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:id="@+id/wifipower_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wifipower_dbm"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/wifipower_frecuency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wifipower_hz"
        android:textAppearance="?android:attr/textAppearanceLarge" 
         android:layout_marginLeft="5dp"/>

</TableRow>
