<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white"
    android:orientation="horizontal"
    android:padding="2dp" >

    <ImageView
        android:id="@+id/row_car_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/conext_borrar"
        android:src="@drawable/ic_action_delete" />

    <TextView
        android:id="@+id/row_car_hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/shape1"
        android:text="@string/row_car_hp"
        android:textAppearance="@style/blueLarge" />

    <TextView
        android:id="@+id/row_car_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/row_car_hp"
        android:text="@string/row_car_name"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/row_car_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/row_car_hp"
        android:layout_alignLeft="@+id/row_car_name"
        android:text="@string/row_car_brand"
        android:textAppearance="@style/blueSmall" />

</RelativeLayout>